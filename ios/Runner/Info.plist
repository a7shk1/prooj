<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

  <!-- اللغة الافتراضية -->
  <key>CFBundleDevelopmentRegion</key>
  <string>$(DEVELOPMENT_LANGUAGE)</string>

  <!-- اسم التطبيق الظاهر -->
  <key>CFBundleDisplayName</key>
  <string>VAR IPTV</string>

  <!-- المعرف/الإصدار -->
  <key>CFBundleExecutable</key>
  <string>$(EXECUTABLE_NAME)</string>
  <key>CFBundleIdentifier</key>
  <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
  <key>CFBundleInfoDictionaryVersion</key>
  <string>6.0</string>
  <key>CFBundleName</key>
  <string>VAR IPTV</string>
  <key>CFBundlePackageType</key>
  <string>APPL</string>
  <key>CFBundleShortVersionString</key>
  <string>$(FLUTTER_BUILD_NAME)</string>
  <key>CFBundleSignature</key>
  <string>????</string>
  <key>CFBundleVersion</key>
  <string>$(FLUTTER_BUILD_NUMBER)</string>

  <!-- تشغيل على iPhone -->
  <key>LSRequiresIPhoneOS</key>
  <true/>

  <!-- شاشة الإقلاع -->
  <key>UILaunchStoryboardName</key>
  <string>LaunchScreen</string>

  <!-- الاتجاهات المدعومة -->
  <key>UISupportedInterfaceOrientations</key>
  <array>
    <string>UIInterfaceOrientationPortrait</string>
    <string>UIInterfaceOrientationLandscapeLeft</string>
    <string>UIInterfaceOrientationLandscapeRight</string>
  </array>
  <key>UISupportedInterfaceOrientations~ipad</key>
  <array>
    <string>UIInterfaceOrientationPortrait</string>
    <string>UIInterfaceOrientationPortraitUpsideDown</string>
    <string>UIInterfaceOrientationLandscapeLeft</string>
    <string>UIInterfaceOrientationLandscapeRight</string>
  </array>

  <!-- أداء ومدخلات -->
  <key>CADisableMinimumFrameDurationOnPhone</key>
  <true/>
  <key>UIApplicationSupportsIndirectInputEvents</key>
  <true/>

  <!-- ATS: بما أنك لا تستخدم WebView والروابط https، نخلي السماح للـ Media فقط.
       إذا عندك Streams عبر http لاحقًا، فَعِّل NSAllowsArbitraryLoads أو أضِف دومينات استثناء. -->
  <key>NSAppTransportSecurity</key>
  <dict>
    <!-- السماح بتحميل الميديا (HLS/MP4) حتى لو من مصادر أقدم تشفيرًا -->
    <key>NSAllowsArbitraryLoadsForMedia</key>
    <true/>
    <!-- مثال لاستثناء دومين معيّن عبر http (اختياري، احذفه إذا ما تحتاجه) -->
    <key>NSExceptionDomains</key>
    <dict>
      <key>yalla1shoot.com</key>
      <dict>
        <key>NSIncludesSubdomains</key><true/>
        <key>NSExceptionAllowsInsecureHTTPLoads</key><true/>
        <key>NSExceptionRequiresForwardSecrecy</key><false/>
      </dict>
    </dict>
  </dict>

  <!-- URL Scheme الخاص بتشغيل الروابط داخل تطبيقك -->
  <key>CFBundleURLTypes</key>
  <array>
    <dict>
      <key>CFBundleURLName</key>
      <string>variptvplayer</string>
      <key>CFBundleURLSchemes</key>
      <array>
        <string>varplayer</string>
      </array>
    </dict>
  </array>

  <!-- تشغيل الصوت بالخلفية -->
  <key>UIBackgroundModes</key>
  <array>
    <string>audio</string>
  </array>

  <!-- أذونات قد تحتاجها حسب ميزاتك (اتركها أو فعّل ما تحتاجه فقط) -->
  <!--
  <key>NSPhotoLibraryUsageDescription</key><string>Need photo library access.</string>
  <key>NSPhotoLibraryAddUsageDescription</key><string>Need to save snapshots.</string>
  <key>NSCameraUsageDescription</key><string>Need camera access.</string>
  <key>NSMicrophoneUsageDescription</key><string>Need microphone access.</string>
  -->

</dict>
</plist>
